{
  "name": "dnd-24-platform",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "pnpm -F @dnd/app build",
    "start": "node app/.output/server/index.mjs",
    "check": "pnpm -r run check",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "pnpm -r run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9",
    "lint-staged": "^15",
    "oxlint": "^0.16",
    "typescript": "^5.7"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint"
    ]
  }
}
